<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dynamic_item_logo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/user_logo"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_weight="20"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dynamic_item_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#d1a127"
                android:textSize="14sp"
                android:text="诸葛亮" />
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/dynamic_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1970-1-1-0-0-0"
                    android:textSize="10sp"
                    android:layout_marginTop="3dp"
                    android:textColor="#66a0a3"/>
                <TextView
                    android:id="@+id/dynamic_item_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重庆市"
                    android:textSize="10sp"
                    android:layout_marginTop="3dp"
                    android:textColor="#9ca19c"/>
            </android.support.v7.widget.LinearLayoutCompat>

        </LinearLayout>

        <ImageView
            android:layout_gravity="right"
            android:id="@+id/dynamic_item_icon"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:theme="?android:selectableItemBackgroundBorderless"
            android:src="@mipmap/ic_launcher_person_round"
            android:padding="8dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/dynamic_item_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="6dp"
        android:textColor="#484848"
        android:textSize="12sp"
        android:layout_marginLeft="52dp"
        android:layout_marginRight="24dp"
        android:maxLines="2"
        android:text="从前有座山，山里有座庙，庙里有个老和尚"/>


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/dynamic_item_content_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#484848"
        android:textSize="14sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/views_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/ic_launcher_eye"/>
        <TextView
            android:id="@+id/views_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9A9A9A"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:text="0"/>
        <TextView
            android:visibility="visible"
            android:id="@+id/pet_brief_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#B6B6B6"
            android:textSize="12sp"
            android:text=" "
            android:background="@drawable/comment_bt_selector"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"/>

        <ImageView
            android:clickable="false"
            android:id="@+id/collect_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/icon_collect"/>
        <TextView
            android:id="@+id/collect_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9A9A9A"
            android:textSize="14sp"
            android:layout_marginLeft="1dp"
            android:text="0"/>

        <ImageView
            android:clickable="false"
            android:id="@+id/favorite_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/icon_work_like"
            android:layout_marginLeft="6dp" />
        <TextView
            android:id="@+id/favorite_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9A9A9A"
            android:textSize="14sp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:text="0"/>

    </LinearLayout>


</LinearLayout>