<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zsg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_corner">
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/keji"
                android:id="@+id/user_logo"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

        </LinearLayout>


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <!--START 关注、聊天-->
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/linearlayout_corner">
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textColor="#f90303"
                android:textSize="24sp"
                android:text="聊天"
                android:layout_gravity="center_vertical"
                android:backgroundTint="@null"/>

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textColor="#f90303"
                android:textSize="24sp"
                android:text="关注"
                android:layout_gravity="center_vertical"
                android:backgroundTint="@null"/>

        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_corner"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:text="最近动态"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="2"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="9"
                    android:gravity="center_vertical"
                    android:text="想要领养一只金毛犬"
                    android:textColor="@color/colorPrimaryDark" />

            </android.support.v7.widget.LinearLayoutCompat>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/rc_divider_line"/>
            <LinearLayout
                android:id="@+id/user_info_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:background="@drawable/linearlayout_corner">

                <!--kkkkkkkkkkkkkkkkk-->
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/icon_work_like"
                        android:layout_width="100px"
                        android:layout_height="30dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/liji_c_blue"
                        android:text="男 24岁 四川-广安"
                        android:layout_width="900px"
                        android:layout_height="30dp"
                        android:layout_weight="9"/>

                </android.support.v7.widget.LinearLayoutCompat>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/rc_divider_line"/>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/icon_work_like"
                        android:layout_width="100px"
                        android:layout_height="30dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="900px"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="9"
                        android:gravity="center_vertical"
                        android:text="腾讯CEO"
                        android:textColor="@color/liji_c_blue" />

                </android.support.v7.widget.LinearLayoutCompat>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/rc_divider_line"/>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/icon_work_like"
                        android:layout_width="100px"
                        android:layout_height="30dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="900px"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="9"
                        android:gravity="center_vertical"
                        android:text="男 24岁 四川-广安"
                        android:textColor="@color/liji_c_blue"
                        tools:text="硕士" />

                </android.support.v7.widget.LinearLayoutCompat>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/rc_divider_line"/>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/icon_work_like"
                        android:layout_width="100px"
                        android:layout_height="30dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="900px"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="9"
                        android:gravity="center_vertical"
                        android:text="138-8843-8845"
                        android:textColor="@color/colorPrimaryDark" />

                </android.support.v7.widget.LinearLayoutCompat>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/rc_divider_line"/>
                <!--kkkkkkkkkkkkkkkkk-->


            </LinearLayout>


        </android.support.v7.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:textColor="#828b8b"
            android:background="#828B8B"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_corner"
            android:orientation="vertical">
            <TextView
                android:text="宠物照片墙"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView
                android:orientation="horizontal"
                android:id="@+id/pet_photo_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>



        </android.support.v7.widget.LinearLayoutCompat>


    </android.support.v7.widget.LinearLayoutCompat>


</ScrollView>