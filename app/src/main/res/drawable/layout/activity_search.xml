<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search.SearchActivity">

    <android.support.design.circularreveal.CircularRevealRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/finish_search"
            android:layout_margin="5dp"
            android:text="返回"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/border_shallow"/>
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/search_text"
            android:layout_margin="5dp"
            android:gravity="center"
            android:hint="             请输入查询内容                         "
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/comment_bt_selector"
            android:layout_toRightOf="@id/finish_search"/>
        <Button
            android:id="@+id/begin_search"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="查询"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/border_shallow"/>
        <GridLayout
            android:layout_marginLeft="20dp"
            android:id="@+id/history_label"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/search_text"
            android:rowCount="3"
            android:columnCount="3">

            <android.support.v7.widget.AppCompatTextView
                android:text="热门搜索"
                android:textColor="#cfc8c8"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/change_label"
                android:text="换一批"
                android:textColor="#cfc8c8"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="1"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/label_1"
                android:gravity="center"
                android:layout_margin="1dp"
                android:text="哈士奇"
                android:textColor="#cfc8c8"
                android:textSize="22sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grey"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/label_2"
                android:gravity="center"
                android:layout_margin="1dp"
                android:text="柯基"
                android:textColor="#cfc8c8"
                android:textSize="22sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grey"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/label_3"
                android:gravity="center"
                android:text="斗牛犬"
                android:layout_margin="1dp"
                android:textColor="#cfc8c8"
                android:textSize="22sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grey"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/label_4"
                android:gravity="center"
                android:layout_margin="1dp"
                android:text="金毛"
                android:textColor="#cfc8c8"
                android:textSize="22sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grey"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/label_5"
                android:gravity="center"
                android:layout_margin="1dp"
                android:text="中华田园犬"
                android:textColor="#cfc8c8"
                android:textSize="22sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grey"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/label_6"
                android:gravity="center"
                android:text="来福"
                android:layout_margin="1dp"
                android:textColor="#cfc8c8"
                android:textSize="22sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grey"/>


        </GridLayout>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_below="@+id/history_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/search_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.design.circularreveal.CircularRevealRelativeLayout>


</android.support.constraint.ConstraintLayout>